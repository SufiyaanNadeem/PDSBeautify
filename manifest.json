{
    "name": "PDSBetter",
    "short_name": "PDSBetter",
    "version": "0.0.0.1",
    "description": "Change you PDSB Login Wallpaper!",
    "permissions": [
        "activeTab",
        "declarativeContent",
        "storage",
        "https://ajax.googleapis.com/ajax/libs/jquery/3.0.0/jquery.min.js"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "https://fed.pdsb.org/*"
            ],
            "js": [
                "customURL.js"
            ],
            "css": [
                "CSS/animate.css"
            ],
            "run_at": "document_end"
        }
    ],
    "page_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "Images/pdsbetter_16.png",
            "32": "Images/pdsbetter_32.png",
            "48": "Images/pdsbetter_48.png",
            "128": "Images/pdsbetter_128.png"
        }
    },
    "icons": {
        "16": "Images/pdsbetter_16.png",
        "32": "Images/pdsbetter_32.png",
        "48": "Images/pdsbetter_48.png",
        "128": "Images/pdsbetter_128.png"
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": false
    },
    "manifest_version": 2
}